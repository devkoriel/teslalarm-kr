WEBHOOK_LISTEN=0.0.0.0

# HTTP client settings
HTTP_TIMEOUT_TOTAL=30
HTTP_TIMEOUT_CONNECT=10
HTTP_TIMEOUT_SOCK_CONNECT=10
HTTP_TIMEOUT_SOCK_READ=20
HTTP_MAX_RETRIES=2
HTTP_MAX_CONCURRENCY=10

# Similarity check settings
SIMILARITY_THRESHOLD=0.8

# Monitoring settings
SENTRY_DSN=your_sentry_dsn_here

# Naver API settings
X_NAVER_CLIENT_ID=your_naver_client_id_here
X_NAVER_CLIENT_SECRET=your_naver_client_secret_here
